<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    tools:context="com.dareu.mobile.activity.WelcomeActivity">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/welcomeLogo"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"
        android:src="@drawable/dareu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="250dp"
        android:id="@+id/welcomeMessage"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:textStyle="bold"
            android:textSize="26sp"
            style="@style/PrimaryWhiteTextView"
            android:text="Get dared wherever you are"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:gravity="center"
            android:textSize="20sp"
            style="@style/PrimaryWhiteTextView"
            android:text="Create your dares widely, earn rewards, have fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:id="@+id/welcomeButtonsLayout"
        android:layout_below="@id/welcomeMessage"
        android:paddingBottom="8dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_gravity="center"
            android:id="@+id/welcomeSignupButton"
            style="@style/PrimaryButtonTheme"
            android:layout_marginBottom="16dp"
            android:text="Sign up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            style="@style/PrimaryWhiteTextView"
            android:id="@+id/welcomeSigninTextView"
            android:layout_gravity="center"
            android:text="Already a user?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
