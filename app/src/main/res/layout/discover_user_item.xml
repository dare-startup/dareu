<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:background="@drawable/circular_selector"
                app:civ_border_color="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/discoverUserItemImage"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="8dp"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:id="@+id/discoverUserItemName"
                style="@style/TitleTextViewTheme"
                android:text="Alberto Rubalcaba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_file_upload_orange_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/discoverUserItemUploads"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_dare"
                    android:layout_width="18dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/discoverUserItemDares"
                    android:textSize="12sp"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight=".2"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:text="Add"
                android:background="@android:color/transparent"
                android:id="@+id/discoverUserItemConnect"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_width="50dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>