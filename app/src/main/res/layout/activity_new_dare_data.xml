<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dareu.mobile.activity.shared.NewDareDataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>


        <ScrollView
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/newDareDataLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TitleTextViewTheme"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:text="Challenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_marginBottom="8dp"
                    android:id="@+id/challengerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:background="@drawable/circular_selector"
                            app:civ_border_color="@android:color/transparent"
                            android:padding="12dp"
                            android:src="@drawable/ic_account_circle_black_24dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="12dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:id="@+id/newDareDataChallengerImage"/>

                        <TextView
                            android:textStyle="normal"
                            android:id="@+id/newDareDataChallengerName"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/TitleTextViewTheme"
                            android:text="Challenger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/TitleTextViewTheme"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:text="Dare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="4dp"
                            android:textStyle="normal"
                            style="@style/TitleTextViewTheme"
                            android:text="Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/newDareDataDareName"
                            android:layout_marginBottom="12dp"
                            android:text="Dare name goes here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp"
                            style="@style/TitleTextViewTheme"
                            android:text="Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/newDareDataDareDescription"
                            android:layout_marginBottom="12dp"
                            android:text="Dare description goes here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp"
                            style="@style/TitleTextViewTheme"
                            android:text="Category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/newDareDataDareCategory"
                            android:layout_marginBottom="12dp"
                            android:text="Dare category goes here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp"
                            style="@style/TitleTextViewTheme"
                            android:text="Estimated dare time (Hours)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/newDareDataDareTimer"
                            android:layout_marginBottom="12dp"
                            android:text="Dare category goes here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp"
                            style="@style/TitleTextViewTheme"
                            android:text="Creation date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/newDareDataDareCreationDate"
                            android:layout_marginBottom="12dp"
                            android:text="Dare creation date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
