<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dareResponseItemThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/dareResponseItemUser"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/dareResponseItemShare"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_transparent_black_background"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_share_white_24dp"
            android:padding="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageButton
            android:id="@+id/dareResponseItemPlay"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:background="@drawable/rounded_transparent_black_background"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@color/primaryBackgroundTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/dareResponseItemTitle"
                android:textSize="14sp"
                android:layout_gravity="center"
                style="@style/PrimaryWhiteTextView"
                android:text="'Skate jump, by fish_mx'"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_remove_red_eye_white_24dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dareResponseItemViews"
                        android:gravity="center"
                        android:textSize="14sp"
                        style="@style/PrimaryWhiteTextView"
                        android:text="201"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_claps"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dareResponseItemClaps"
                        android:gravity="center"
                        style="@style/PrimaryWhiteTextView"
                        android:textSize="14sp"
                        android:text="201"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_comment_white_24dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dareResponseItemComments"
                        android:gravity="center"
                        android:textSize="14sp"
                        style="@style/PrimaryWhiteTextView"
                        android:text="21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>