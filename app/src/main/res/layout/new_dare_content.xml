<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/colorPrimary"
    android:padding="6dp">

    <TextView
        android:id="@+id/notificationLayoutDetails"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Details"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="You got a dare! by "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/notificationLayoutName"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Alberto Rubalcaba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notificationLayoutDareDescription"
        android:layout_margin="8dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Dare description goes here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/notificationLayoutAcceptButton"
            style="@style/DarkButtonTheme"
            android:text="Yeah, I'll do this"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/notificationLayoutDeclineButton"
            style="@style/PrimaryColorBorderedButtonTheme"
            android:text="I'll pass"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/notificationLayoutFlag"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:text="@string/flag_dare_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>