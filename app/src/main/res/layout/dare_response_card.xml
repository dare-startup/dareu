<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dareResponseItemUser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="8dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dareResponseItemTitle"
                        style="@style/TitleTextViewTheme"
                        android:text="Dare title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/dareResponseItemDate"
                        style="@style/PrimaryTextViewTheme"
                        android:text="Upload date"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dareResponseItemShare"
                    android:src="@drawable/ic_share_orange"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"/>
                <Button
                    android:background="@android:color/transparent"
                    android:id="@+id/dareResponseItemMenu"
                    android:textSize="24sp"
                    style="@style/PrimaryTextViewTheme"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/welcome_background"
                    android:scaleType="fitXY"
                    android:id="@+id/dareResponseItemThumb"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />

                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:id="@+id/dareResponseItemPlay"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_arrow_white_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_thumb_grey"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:id="@+id/dareResponseItemClaps"
                        android:text="50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_remove_eye_grey"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:id="@+id/imageView"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/dareResponseItemViews"
                        android:text="200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight=".333"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_comment_grey"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:id="@+id/dareResponseItemComments"
                        android:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>