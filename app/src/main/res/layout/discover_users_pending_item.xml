<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <LinearLayout
        android:gravity="center"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:background="@drawable/circular_selector"
            app:civ_border_color="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:id="@+id/discoverUserPendingItemImage"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight=".6"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/discoverUserPendingItemName"
            android:padding="12dp"
            style="@style/TitleTextViewTheme"
            android:text="Name goes here... "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_score"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="12dp"
                android:id="@+id/discoverUserPendingItemScore"
                android:layout_marginRight="8dp"
                style="@style/TitleTextViewTheme"
                android:layout_gravity="center"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_personal_video"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="12dp"
                android:id="@+id/discoverUserPendingItemResponses"
                style="@style/TitleTextViewTheme"
                android:layout_gravity="center"
                android:text="17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight=".25"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@drawable/circular_selector"
            android:id="@+id/discoverUserPendingItemDecline"
            android:layout_gravity="center"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_width="50dp"
            android:layout_height="40dp" />
        <ImageButton
            android:background="@drawable/circular_selector"
            android:id="@+id/discoverUserPendingItemAccept"
            android:layout_gravity="center"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>